              <button class="btn btn-danger btn-2" type="button"><i
                      class="fa-solid fa-delete-left"></i>Annuler</button>
              <button class="btn btn-success btn-2" type="button" onclick="login()"><i class="fa fa-sign-in"></i>Se connecter</button>
          </div>

