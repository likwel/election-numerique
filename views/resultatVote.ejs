    <div class="body-liste-electeur">
        <div class="liste-electeur">

            <section class="section-liste-electorale">
                <!--for demo wrap-->
                <!-- <h1>Liste électorale</h1> -->
                <button class="ajout-electeur" onclick="openModal()"><i class="fa-solid fa-user-plus"></i> Hampiditra mpifidy</button>

                <div class="tbl-content">
                    <table cellpadding="0" cellspacing="0" border="0" id="mon-table">

                        <thead style="padding: 0 10px ;" class="tbl-header">
                            <tr>
                                <th style="width: 20px;">N°</th>
                                <th>CIN</th>
                                <th>Anarana</th>
                                <th>Sary Voalohany</th>
                                <th>Sary faharoa</th>
